= form_for @message, html: { class: "form-horizontal", role: "form" } do |f|
  -if @message.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"

      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .input-group
    %span.input-group-addon= f.label :from_user_id
    = f.number_field :from_user_id, class: 'form-control'
  .input-group
    %span.input-group-addon= f.label :body
    = f.text_area :body, class: 'form-control'

  .input-group
    %br
    = f.submit class: 'btn btn-primary'
