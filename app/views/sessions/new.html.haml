.col-md-4.col-md-offset-4
  = form_tag sessions_path do
    .input-group
      %span.input-group-addon
        %span.glyphicon.glyphicon-envelope
      = text_field_tag :email, params[:email], :class => "form-control", :placeholder => " Email"
    .input-group.password-input
      %span.input-group-addon
        %span.glyphicon.glyphicon-lock
      = password_field_tag :password, nil, :class => "form-control", :placeholder => " Password"

    .row
      .col-md-12
        .actions= submit_tag "Login", :class => "btn btn-primary form-control"

  .text-80.text-center
    =link_to "forgot password?", forgot_password_users_path
    \|
    =link_to "register", new_user_path
